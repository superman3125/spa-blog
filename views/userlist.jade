.blog-user
    h3 用户列表
    #userList
        table.table.table-bordered.table-condensed.table-striped.table-hover
            thead
              tr.success
                th 用户名
                th 邮箱
                th 删除?
            tbody
    h3 用户信息
    p
        strong 姓名:
        |    <span id="userInfoName"></span>
        br
        strong 年龄:
        |    <span id="userInfoAge"></span>
        br
        strong 性别:
        |    <span id="userInfoGender"></span>
        br
        strong 位置:
        |    <span id="userInfoLocation"></span>

    h3 新增用户
    #addUser
        fieldset
            input#inputUserName(type="text",placeholder="用户名")
            input#inputUserEmail(type="text",placeholder="用户邮件")
            br
            input#inputUserFullname(type="text",placeholder="全称")
            input#inputUserAge(type="text",placeholder="年龄")
            br
            input#inputUserLocation(type="text",placeholder="住址")
            input#inputUserGender(type="text",placeholder="性别")
            br
            button#btnAddUser.btn.btn-info 新增用户

script(src='/javascripts/userlist.js')